	<!--	############	-->
	<!--	 ANIMATIONS 	-->
	<!--	############	-->
	
	<!--	Engine	-->
	<animation>
		<name>propeller</name>
		<object-name>propdisc</object-name>
		<object-name>prop</object-name>
		<object-name>bol</object-name>
	</animation>
	<animation>
		<type>select</type>
		<object-name>propdisc</object-name>
		<condition>
			<greater-than>
				<property>engines/engine[0]/rpm</property>
				<value>750</value>
			</greater-than>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>prop</object-name>
		<condition>
			<less-than>
				<property>engines/engine[0]/rpm</property>
				<value>750</value>
			</less-than>
		</condition>
	</animation>
	<animation>
		<type>spin</type>
		<object-name>propeller</object-name>
		<property>engines/engine[0]/rpm</property>
		<factor> 1 </factor>
		<center>
			<z-m>  0.225324</z-m>
		</center>
		<axis>
			<x> -1 </x>
			<y>  0 </y>
			<z>  0 </z>
		</axis>
	</animation>
	<!--	FLIGHT CONTROL SURFACES	-->
	<!--	Elevator	-->
	<animation>
		<type>rotate</type>
		<object-name>elevator</object-name>
		<object-name>elevator.trim.tab</object-name>
		<property>surface-positions/elevator-pos-norm</property>
		<factor>21</factor>
		<!--Max elevator deflection: 21°-->
