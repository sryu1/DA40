<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

	<path>hobbs.ac</path>
	
	<animation>
		<type>shader</type>
		<shader>chrome</shader>
		<texture>Aircraft/DR400-Ecoflyer/Models/Effects/glass_shader.png</texture>
		<object-name>glass</object-name>
	</animation>
	
	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>glass</object-name>
	</effect>

	<animation>
		<type>material</type>
		<object-name>case</object-name>
		<object-name>hours.01</object-name>
		<object-name>hours.1</object-name>
		<object-name>hours.10</object-name>
		<object-name>hours.100</object-name>
		<object-name>hours.1000</object-name>
		<emission>
			<red>   0.07 </red>
			<green> 0.04 </green>
			<blue>  0.04 </blue>
			<factor-prop>systems/electrical/outputs/panel-light[2]</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>hours.01</object-name>
		<property>engines/engine[0]/hobbs</property>
		<factor>360</factor>
		<axis>
			<x>  0 </x>
			<y>  1 </y>
			<z>  0 </z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>hours.1</object-name>
		<property>engines/engine[0]/hobbs</property>
		<factor>36</factor>
		<axis>
			<x>  0 </x>
			<y>  1 </y>
			<z>  0 </z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>hours.10</object-name>
		<property>engines/engine[0]/hobbs</property>
		<factor>3.6</factor>
		<axis>
			<x>  0 </x>
			<y>  1 </y>
			<z>  0 </z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>hours.100</object-name>
		<property>engines/engine[0]/hobbs</property>
		<factor>0.36</factor>
		<axis>
			<x>  0 </x>
			<y>  1 </y>
			<z>  0 </z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>hours.1000</object-name>
		<property>engines/engine[0]/hobbs</property>
		<factor>0.036</factor>
		<axis>
			<x>  0 </x>
			<y>  1 </y>
			<z>  0 </z>
		</axis>
	</animation>

</PropertyList>

