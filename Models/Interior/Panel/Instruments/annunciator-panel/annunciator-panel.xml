<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
	<path>annunciator-panel.ac</path>
	
	<!--	Electrical Power	-->
	<animation>
		<type>select</type>
		<condition>
			<greater-than>
				<property>systems/electrical/outputs/annun</property>
				<value>9.0</value>
			</greater-than>
		</condition>
		<object-name>annun.light.ack</object-name>
		<object-name>annun.warning</object-name>
		<object-name>annun.caution</object-name>
		<object-name>annun.start</object-name>
		<object-name>annun.doors</object-name>
		<object-name>annun.trim_fail</object-name>
		<object-name>annun.low_volts</object-name>
		<object-name>annun.alternator</object-name>
		<object-name>annun.ecu_a</object-name>
		<object-name>annun.ecu_b</object-name>
		<object-name>annun.fuel_trans</object-name>
		<object-name>annun.pitot</object-name>
		<object-name>annun.low_fuel</object-name>
		<object-name>annun.engine</object-name>
		<object-name>annun.glow</object-name>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>annun.btn.ack</object-name>
		<object-name>annun.light.ack</object-name>
		<action>
			<button>0</button>
			<binding>
				<command>nasal</command>
				<script>whitewire_annun.ack_press(1);</script>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/annunciator-panel/ack-btn</property>
				<value>1</value>
			</binding>
			<mod-up>
				<binding>
					<command>nasal</command>
					<script>whitewire_annun.ack_press(0);</script>
				</binding>
				<binding>
					<command>property-assign</command>
					<property>instrumentation/annunciator-panel/ack-btn</property>
					<value>0</value>
				</binding>
			</mod-up>
		</action>
	</animation>
	<animation>
		<type>translate</type>
		<object-name>annun.btn.ack</object-name>
		<object-name>annun.light.ack</object-name>
		<property>instrumentation/annunciator-panel/ack-btn</property>
		<factor>-0.0003</factor>
		<axis>
			<x>1</x>
		</axis>
	</animation>
	<animation>
		<type>select</type>
		<object-name>annun.light.ack</object-name>
		<condition>
			<property>instrumentation/annunciator-panel/lights/ack</property>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>annun.warning</object-name>
		<condition>
			<property>instrumentation/annunciator-panel/lights/warning</property>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>annun.caution</object-name>
		<condition>
			<property>instrumentation/annunciator-panel/lights/caution</property>
		</condition>
	</animation>
	
	
	<animation>
		<type>select</type>
		<object-name>annun.start</object-name>
		<condition>
			<property>instrumentation/annunciator-panel/lights/start</property>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>annun.doors</object-name>
		<condition>
			<property>instrumentation/annunciator-panel/lights/doors</property>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>annun.trim_fail</object-name>
		<condition>
			<property>instrumentation/annunciator-panel/lights/trim-fail</property>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>annun.low_volts</object-name>
		<condition>
			<property>instrumentation/annunciator-panel/lights/low-volts</property>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>annun.alternator</object-name>
		<condition>
			<property>instrumentation/annunciator-panel/lights/alternator</property>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>annun.ecu_a</object-name>
		<condition>
			<property>instrumentation/annunciator-panel/lights/ecu-a</property>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>annun.ecu_b</object-name>
		<condition>
			<property>instrumentation/annunciator-panel/lights/ecu-b</property>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>annun.fuel_trans</object-name>
		<condition>
			<property>instrumentation/annunciator-panel/lights/fuel-trans</property>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>annun.pitot</object-name>
		<condition>
			<property>instrumentation/annunciator-panel/lights/pitot</property>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>annun.low_fuel</object-name>
		<condition>
			<property>instrumentation/annunciator-panel/lights/low-fuel</property>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>annun.engine</object-name>
		<condition>
			<property>instrumentation/annunciator-panel/lights/engine</property>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>annun.glow</object-name>
		<condition>
			<property>instrumentation/annunciator-panel/lights/glow</property>
		</condition>
	</animation>
</PropertyList>
