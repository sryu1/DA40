<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>
	
	<path>vsi.ac</path>
	
	<effect>
		<inherits-from>../../../../Effects/interior/instrument-glass</inherits-from>
		<object-name>vsi.glass</object-name>
	</effect>
	
	<animation>
		<type>material</type>
		<object-name>vsi.face</object-name>
		<object-name>vsi.needle</object-name>
		<emission>
			<factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
			<red>   0.05  </red>
			<green> 0.025 </green>
			<blue>  0.025 </blue>
		</emission>
	</animation>
	
	<animation> 
		<type>rotate</type>
		<object-name>vsi.needle</object-name>
		<property>instrumentation/vertical-speed-indicator/indicated-speed-fpm</property>
		<interpolation>
			<entry><ind> -2000 </ind><dep> -172 </dep></entry>
			<entry><ind> -1500 </ind><dep> -130 </dep></entry>
			<entry><ind> -1000 </ind><dep>  -81 </dep></entry>
			<entry><ind>  -500 </ind><dep>  -35 </dep></entry>
			<entry><ind>     0 </ind><dep>    0 </dep></entry>
			<entry><ind>   500 </ind><dep>   35 </dep></entry>
			<entry><ind>  1000 </ind><dep>   81 </dep></entry>
			<entry><ind>  1500 </ind><dep>  130 </dep></entry>
			<entry><ind>  2000 </ind><dep>  172 </dep></entry>
		</interpolation>
		<axis>
			<x> -1 </x>
		</axis>
	</animation>
	
</PropertyList>
