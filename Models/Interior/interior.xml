<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
	<path>interior.ac</path>
	<!--	EFFECTS	-->
	<effect>
		<inherits-from>../Effects/interior/interior-glass</inherits-from>
		<parameters>
			<texture n="2">
				<image>Models/Effects/interior/mask-interior-glass-front.png</image>
			</texture>
		</parameters>
		<object-name>window.F.int</object-name>
	</effect>
	<effect>
		<inherits-from>../Effects/interior/interior-glass</inherits-from>
		<object-name>window.L.int</object-name>
		<object-name>window.R.int</object-name>
	</effect>
	<effect>
		<inherits-from>../Effects/interior/interior</inherits-from>
		<object-name>interior</object-name>
	</effect>
	<!--	MODELS	-->
	<!--	Instrument Panel	-->
	<model>
		<path>Panel/panel.xml</path>
		<condition>
			<not>
				<property>options/g1000</property>
			</not>
		</condition>
		<offsets>
			<x-m> -2.20 </x-m>
			<y-m>  0.00 </y-m>
			<z-m>  0.39 </z-m>
		</offsets>
	</model>
	<model>
		<path>Panel/panel-g1000.xml</path>
		<condition>
			<property>options/g1000</property>
		</condition>
		<offsets>
			<x-m> -2.20 </x-m>
			<y-m>  0.00 </y-m>
			<z-m>  0.39 </z-m>
		</offsets>
	</model>
	<!-- Hobbs -->
	<model>
		<path>Panel/Instruments/hobbs/hobbs.xml</path>
		<offsets>
			<x-m> -1.602 </x-m>
			<y-m> -0.004 </y-m>
			<z-m>  0.045 </z-m>
			<pitch-deg>270</pitch-deg>
			<heading-deg>270</heading-deg>
			<roll-deg>0</roll-deg>
		</offsets>
	</model>
	<!-- Canopy Front -->
	<animation>
		<type>rotate</type>
		<object-name>window.F.int</object-name>
		<property>da40/canopy-norm</property>
		<interpolation>
			<entry>
				<ind> 0 </ind>
				<dep> 0 </dep>
			</entry>
			<entry>
				<ind>  1  </ind>
				<dep> -50 </dep>
			</entry>
		</interpolation>
		<center>
			<x-m> -2.67007  </x-m>
			<y-m>  0.0      </y-m>
			<z-m>  0.460298 </z-m>
		</center>
		<axis>
			<x> 0 </x>
			<y> 1 </y>
			<z> 0 </z>
		</axis>
	</animation>
	<!-- Rear Door -->
	<animation>
		<type>rotate</type>
		<object-name>window.L.int</object-name>
		<property>da40/door-left-norm</property>
		<interpolation>
			<entry>
				<ind> 0 </ind>
				<dep> 0 </dep>
			</entry>
			<entry>
				<ind>  1  </ind>
				<dep> -65 </dep>
			</entry>
		</interpolation>
		<axis>
			<x1-m> -1.12832  </x1-m>
			<y1-m>  0.009967 </y1-m>
			<z1-m>  0.851564 </z1-m>
			<x2-m> -0.524687 </x2-m>
			<y2-m> -0.071008 </y2-m>
			<z2-m>  0.792257 </z2-m>
		</axis>
	</animation>
	
	<animation>
		<type>slider</type>
		<object-name>parking_brake_lever</object-name>
		<drag-direction>vertical</drag-direction>
		<property>controls/gear/brake-parking</property>
		<factor>-0.09</factor>
		<offset-m>0.09</offset-m>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0.77</z>
		</axis>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>controls/gear/brake-parking</property>
				<min>0</min>
				<max>1</max>
				<factor>-0.05</factor>
			</binding>
		</action>
	</animation>

	<animation>
		<type>slider</type>
		<object-name>heat_defrost_lever</object-name>
		<drag-direction>vertical</drag-direction>
		<property>environment/aircraft-effects/defrost-set</property>
		<factor>0.09</factor>
		<offset-m>0.0</offset-m>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0.77</z>
		</axis>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>environment/aircraft-effects/defrost-set</property>
				<min>0</min>
				<max>1</max>
				<factor>0.05</factor>
			</binding>
		</action>
	</animation>

	<animation>
		<type>slider</type>
		<object-name>heat_lever</object-name>
		<drag-direction>vertical</drag-direction>
		<property>environment/aircraft-effects/cabin-heat-set</property>
		<factor>0.09</factor>
		<offset-m>0.0</offset-m>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0.77</z>
		</axis>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>environment/aircraft-effects/cabin-heat-set</property>
				<min>0</min>
				<max>1</max>
				<factor>0.05</factor>
			</binding>
		</action>
	</animation>

	<animation>
		<type>slider</type>
		<object-name>throttle_lever</object-name>
		<drag-direction>vertical</drag-direction>
		<property>controls/engines/engine/throttle</property>
		<factor>0.1</factor>
		<offset-m>-0.05</offset-m>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>controls/engines/engine/throttle</property>
				<min>0</min>
				<max>1</max>
				<factor>0.05</factor>
			</binding>
		</action>
	</animation>
	<!-- Fuel Tank Selector -->
	<animation>
		<type>knob</type>
		<object-name>fuel_valve_lever</object-name>
		<property>controls/fuel/fuel-tank-selector</property> <!-- 0=off, 1=right, 2=left -->
		<factor> 90 </factor>
        <offset-deg> -135 </offset-deg>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
		<center>
			<x-m> -1.865 </x-m>
			<y-m> 0 </y-m>
		</center>
		<action>
			<binding>
				<command>property-cycle</command>
				<property>controls/fuel/fuel-tank-selector</property>
				<value> 0 </value>
				<value> 1 </value>
				<value> 2 </value>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>
	<!-- Elevator Trim -->
	<animation>
		<type>knob</type>
		<object-name>elevator_trim</object-name>
		<property>controls/flight/elevator-trim</property>
		<factor>-720</factor>
		<drag-direction>vertical</drag-direction>
		<axis>
			<x>0.0</x>
			<y>1.0</y>
			<z>0.0</z>
		</axis>
		<center>
			<x-m>-1.74988</x-m>
			<y-m>0.0037</y-m>
			<z-m>0.061148</z-m>
		</center>
		<action>
			<binding>
				<condition>
					<not><property>/devices/status/keyboard/alt</property></not>
				</condition>
				<command>property-adjust</command>
				<property>controls/flight/elevator-trim</property>
				<factor>0.001</factor>
				<min>-1</min>
				<max>1</max>
				<wrap>0</wrap>
			</binding>
			<binding>
				<condition>
					<property>/devices/status/keyboard/alt</property>
				</condition>
				<command>property-adjust</command>
				<property>controls/flight/elevator-trim</property>
				<factor>0.0001</factor>
				<min>-1</min>
				<max>1</max>
				<wrap>0</wrap>
			</binding>
		</action>
		<hovered>
			<binding>
				<command>set-tooltip</command>
				<label>Elevator trim: %3f</label>
				<tooltip-id>pitch-trim</tooltip-id>
				<property>controls/flight/elevator-trim</property>
			</binding>
		</hovered>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>elevator_trim_marker</object-name>
		<property>controls/flight/elevator-trim</property>
		<factor>-35</factor>
		<axis>
			<x>0.0</x>
			<y>1.0</y>
			<z>0.0</z>
		</axis>
		<center>
			<x-m>-1.76151 m</x-m>
			<y-m>-0.025133</y-m>
			<z-m>-0.031293</z-m>
		</center>
	</animation>
</PropertyList>
